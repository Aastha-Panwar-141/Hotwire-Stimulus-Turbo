<div class="flex-column m-5" style = "height: auto;">
  <h1 class="text-center"> Employees </h1>
  <div class="p-3">
    <%= form_with(url: employees_path, method: "GET") do |form| %>
    <%= form.label :query, "Search by name:" %>
    <%= form.text_field :query %>
    <%= form.submit 'Search', name: nil %>
    <% end %>
  </div>
    
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <!-- Employee Table -->
  <div>
  <%= render 'employee_list' %>
  </div>
  <div class="d-flex justify-content-center">
    <%= button_to "Add New Employee", new_employee_path, method: :get ,class:"btn-primary shadow p-3 m-3" %>
  </div>
</div>